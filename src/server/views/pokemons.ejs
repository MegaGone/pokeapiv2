<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokeapi</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>
    <div class="container p-2 mt-4">
        <div class="row">
            <div class="col">
                <h1 class="text-center mt-3">Pokemons</h1>
                <hr>
            </div>
            <div class="row">
                <div class="col">
                    <a href="http://localhost:2021/api">
                        <button class="btn btn-outline-danger">Back</button>
                    </a>
                </div>
            </div>
        </div>

        <!-- Pokemons list -->
        <div class="row mt-3">
            <% sendPokemons.forEach(function(pokemon) { %>
            <div class="col-6 text-center mt-3  justify-content-center align-items-center">
                <div class="card border-dark">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="<%= pokemon.image %>" width="200" alt="50">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h1 class="card-title text-capitalize">
                                    <%= pokemon.name %>
                                </h1>
                                <h5>
                                    ID: <%= pokemon.id %>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <div class="row">
            <div class="col mt-5">
                <div class="container text-center h-100 d-flex justify-content-center align-items-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="http://localhost:2021/api/pokemons" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item disabled"><a class="page-link" href="http://localhost:2021/api/pokemons">1</a></li>
                            <li class="page-item"><a class="page-link" href="http://localhost:2021/api/pokemons">2</a></li>
                            <li class="page-item"><a class="page-link" href="http://localhost:2021/api/pokemons">3</a></li>
                            <li class="page-item"><a class="page-link" href="http://localhost:2021/api/pokemons">4</a></li>
                            <li class="page-item"><a class="page-link" href="http://localhost:2021/api/pokemons">5</a></li>
                            <li class="page-item">
                                <a class="page-link" href="http://localhost:2021/api/pokemons" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</body>

</html>